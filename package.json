{
  "name": "opencode-obsidian-workspace",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/server/*",
    "packages/plugin/*",
    "packages/agents/*",
    "packages/cli/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --stream dev",
    "build": "pnpm --parallel --stream build",
    "start": "pnpm --parallel --stream start",
    "build-core": "pnpm install && pnpm --filter @opencode-obsidian-workspace/core build",
    "build:packages": "npm run build --workspaces --if-present",
    "start:server": "npm run start --workspace=@opencode-obsidian-workspace/server",
    "start:runtime": "npm run start --workspace=@opencode-obsidian-workspace/runtime",
    "start:cli": "npm run start --workspace=@opencode-obsidian-workspace/cli",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf dist coverage .nyc_output",
    "publish:all": "npm run build && npm publish --workspaces --access public",
    "version:bump": "npm version patch --workspaces",
    "precommit": "npm run lint && npm run test",
    "release": "npm run clean && npm run build && npm run test && npm run publish:all"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/ws": "^8.18.1",
    "concurrently": "^7.6.0",
    "esbuild": "0.17.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@opencode-ai/plugin": "^0.11.8",
    "ethers": "^6.15.0",
    "merkle-patricia-tree": "^4.2.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  }
}