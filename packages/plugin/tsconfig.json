{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    // "rootDir": "./src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    
  },
  "include": [
    "esbuild.config.mjs",
    "manifest.json",
    "package.json",
    "styles.css",
    "versions.json",
    "LICENSE",
    "README.md",
    "tsconfig.json",
    "version-bump.mjs",
    "**/*.ts",
    "**/*.tsx",
    "../../core/dist/**/*.d.ts"
  ],

  "files": [
    "main.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

