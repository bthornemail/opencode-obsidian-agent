{
    "$schema": "https://opencode.ai/schema/config.json",
    "theme": "dark",
    "keybinds": {
        "leader": "ctrl",
        "app_help": "ctrl+h",
        "app_exit": "ctrl+q",
        "editor_open": "ctrl+e",
        "theme_list": "ctrl+t",
        "project_init": "ctrl+p",
        "tool_details": "ctrl+d",
        "thinking_blocks": "ctrl+b",
        "session_export": "ctrl+shift+e",
        "session_new": "ctrl+n",
        "session_list": "ctrl+l",
        "session_timeline": "ctrl+shift+t",
        "session_share": "ctrl+s",
        "session_unshare": "ctrl+u",
        "session_interrupt": "ctrl+c",
        "session_compact": "ctrl+shift+c",
        "session_child_cycle": "alt+right",
        "session_child_cycle_reverse": "alt+left",
        "messages_page_up": "pageup",
        "messages_page_down": "pagedown",
        "messages_half_page_up": "alt+pageup",
        "messages_half_page_down": "alt+pagedown",
        "messages_first": "home",
        "messages_last": "end",
        "messages_copy": "ctrl+shift+c",
        "messages_undo": "ctrl+z",
        "messages_redo": "ctrl+y",
        "model_list": "ctrl+m",
        "model_cycle_recent": "alt+m",
        "model_cycle_recent_reverse": "alt+shift+m",
        "agent_list": "ctrl+a",
        "agent_cycle": "alt+a",
        "agent_cycle_reverse": "alt+shift+a",
        "input_clear": "ctrl+k",
        "input_paste": "ctrl+v",
        "input_submit": "enter",
        "input_newline": "shift+enter",
        "switch_mode": null,
        "switch_mode_reverse": null,
        "switch_agent": null,
        "switch_agent_reverse": null,
        "file_list": null,
        "file_close": null,
        "file_search": null,
        "file_diff_toggle": null,
        "messages_previous": null,
        "messages_next": null,
        "messages_layout_toggle": null,
        "messages_revert": null
    },
    "tui": {
        "scroll_speed": 3
    },
    "command": {
        "greet": {
            "template": "echo Hello, {{name}}!",
            "description": "Greets a user",
            "agent": "general",
            "model": "openai/gpt-4",
            "subtask": false
        }
    },
    "watcher": {
        "ignore": [
            "node_modules",
            ".git"
        ]
    },
    "plugin": [
        "my-plugin",
        "logger"
    ],
    "snapshot": true,
    "share": "manual",
    "autoshare": false,
    "autoupdate": true,
    "disabled_providers": [
        "anthropic"
    ],
    "model": "deepseek-r1:8b",
    "small_model": "gemma3:270m",
    "username": "brian",
    "mode": {
        "build": {
            "name": "builder-agent"
        },
        "plan": {
            "name": "planner-agent"
        }
    },
    "agent": {
        "plan": {
            "name": "planner-agent"
        },
        "build": {
            "name": "builder-agent"
        },
        "general": {
            "name": "general-agent"
        }
    },
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "deepseek-r1:8b": {
                    "name": "DeepSeek R1 8B"
                },
                "gemma3:270m": {
                    "name": "Gemma 3 270M"
                }
            }
        }
    },
    "mcp": {
        "sequentialthinking": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking@latest"
            ],
            "enabled": true
        },
        "redis": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-redis"
            ],
            "environment": {
                "REDIS_URL": "redis://127.0.0.1:6379"
            },
            "enabled": true
        },
        "claude": {
            "command": "claude",
            "args": [
                "mcp",
                "serve"
            ],
            "environment": {},
            "enabled": true
        },
        "ollama": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "ollama-mcp-server@latest"
            ],
            "environment": {
                "OLLAMA_BASE_URL": "http://localhost:11434"
            },
            "enabled": true
        },
        "wiki-vector-mcp": {
            "type": "stdio",
            "command": "node",
            "args": [
                "/home/main/devops/universal-life-protocol/packages/universal-life-vault/dist/wiki-vector-mcp.js"
            ],
            "enabled": true
        },
        "axiom-canvas-mcp": {
            "type": "stdio",
            "command": "node",
            "args": [
                "/home/main/devops/universal-life-protocol/packages/universal-life-vault/dist/axiom-canvas-mcp.js"
            ],
            "enabled": true
        },
        "obsidian-mcp": {
            "type": "stdio",
            "command": "node",
            "args": [
                "/home/main/devops/universal-life-protocol/packages/universal-life-vault/dist/obsidian-mcp.js"
            ],
            "enabled": true
        },
        "identity-mcp": {
            "type": "stdio",
            "command": "node",
            "args": [
                "/home/main/devops/universal-life-protocol/packages/universal-life-vault/dist/identity-mcp.js"
            ],
            "enabled": true
        },
        "logos-client": {
            "type": "stdio",
            "command": "node",
            "args": [
                "/home/main/devops/archive/universal-life-schema/production/logos-client/dist/logos-client.js"
            ],
            "environment": {
                "LOGOS_API_URL": "http://127.0.0.1:3000",
                "LOGOS_CREATOR_ID": "logos-client"
            },
            "enabled": true
        },
        "logos-server": {
            "type": "stdio",
            "command": "node",
            "args": [
                "/home/main/devops/archive/universal-life-schema/production/logos-client/dist/logos-server.js"
            ],
            "environment": {
                "LOGOS_API_URL": "http://127.0.0.1:3000",
                "LOGOS_CREATOR_ID": "logos-server"
            },
            "enabled": true
        },
        "opencode-server": {
            "type": "remote",
            "url": "ws://localhost:4096",
            "enabled": true,
            "headers": {}
        },
        "opencode-client": {
            "type": "remote",
            "url": "ws://localhost:4096",
            "enabled": true,
            "headers": {}
        },
        "obsidian-client": {
            "type": "remote",
            "url": "http://127.0.0.1:9090",
            "enabled": true,
            "headers": {}
        },
        "agent-runtime": {
            "type": "remote",
            "url": "ws://localhost:8080",
            "enabled": true,
            "headers": {}
        }
    },
    "formatter": {
        "prettier": {
            "command": [
                "prettier",
                "--write"
            ],
            "extensions": [
                ".ts",
                ".js"
            ]
        }
    },
    "lsp": {
        "typescript": {
            "command": [
                "typescript-language-server",
                "--stdio"
            ],
            "extensions": [
                ".ts",
                ".tsx"
            ]
        }
    },
    "instructions": [
        "instructions/**/*.md"
    ],
    "layout": "auto",
    "permission": {
        "edit": "ask",
        "bash": "allow",
        "webfetch": "deny"
    },
    "tools": {
        "search": true,
        "summarize": false
    },
    "experimental": {
        "hook": {
            "file_edited": {
                "*.ts": [
                    {
                        "command": [
                            "eslint",
                            "--fix"
                        ]
                    }
                ]
            },
            "session_completed": [
                {
                    "command": [
                        "notify-send",
                        "Session completed"
                    ]
                }
            ]
        },
        "disable_paste_summary": false
    }
}