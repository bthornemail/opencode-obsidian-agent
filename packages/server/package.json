{
  "name": "@opencode-obsidian-workspace/server",
  "version": "1.0.0",
  "description": "Global WebSocket Relay Server for Opencode V5+",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev:server": "tsx src/index.ts",
    "dev:plugin": "tsc -watch --project tsconfig.plugin.json",
    "dev": "concurrently --names \"opencode-server,opencode-plugin\" --color \"blue,green\" \"npm run dev:server\" \"npm run dev:plugin\"",
    "build:server": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "build:plugin": "tsc --project tsconfig.plugin.json",
    "build": "npm run build:server && npm run build:plugin"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^0.11.8",
    "@opencode-ai/sdk": "^0.12.1",
    "@opencode-obsidian-workspace/core": "workspace:*",
    "dotenv": "^17.2.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/ws": "^8.13.0",
    "esbuild": "0.17.3",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  }
}