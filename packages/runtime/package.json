{
  "name": "@opencode-obsidian-workspace/runtime",
  "version": "1.0.0",
  "description": "Background agent runtime for a single vault",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "predev": "export OPENCODE_OBSIDIAN_RUNTIME_WS_PORT=8080",
    "dev": "tsx src/index.ts",
    "postdev": "fuser -k 8080/tcp",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:chokidar --external:wink-nlp --external:wink-eng-lite-web-model --external:wordnet",
    "prestart": "export OPENCODE_OBSIDIAN_RUNTIME_WS_PORT=8080",
    "start": "node dist/index.js",
    "poststart": "fuser -k 8080/tcp"
  },
  "dependencies": {
    "@ipshipyard/node-datachannel": "^0.26.6",
    "@opencode-obsidian-workspace/core": "workspace:*",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.2",
    "helia": "^5.5.1",
    "multiformats": "^11.0.2",
    "wink-eng-lite-web-model": "^1.8.1",
    "wink-nlp": "^2.4.0",
    "wordnet": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.25.10",
    "ts-node": "^10.9.2",
    "typescript": "4.7.4"
  }
}
